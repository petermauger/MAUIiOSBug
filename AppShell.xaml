<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="iOSCellReuseBug.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:iOSCellReuseBug.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Simple" ContentTemplate="{DataTemplate views:SimplePage}" />
        <ShellContent Title="Safe Template" ContentTemplate="{DataTemplate views:TemplateSelectorPage}" />
        <ShellContent Title="Bad Template" ContentTemplate="{DataTemplate views:TemplateSelectorPage}" />
        <ShellContent Title="CollectionView" ContentTemplate="{DataTemplate views:CollectionViewPage}" />
    </TabBar>

</Shell>

